{
  "name": "@arcgis/charts-shared-utils",
  "version": "4.31.0-next.104",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "Shared utility functions used by arcgis-charts packages",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/commonjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "yarn build:esm && yarn build:esmbundle",
    "build:esm": "yarn g:tsc --pretty --sourceMap",
    "build:esmbundle": "rollup -c",
    "build:production": "yarn prebuild && tsc --pretty  && rollup -c --environment BUILD_TYPE:production && rimraf dist/tsc",
    "copy:mocks": "yarn node ./scripts/gather-test-utils.js",
    "docs": "typedoc --out docs",
    "install-peers": "peerdeps",
    "lint": "yarn g:eslint '**/*.*' --ignore-path ../../.eslintignore --fix --cache --config ../../.eslintrc.json",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged  --config=../../.lintstagedrc.json",
    "predocs": "rimraf docs",
    "prepublicdocs": "rimraf public-docs",
    "pretty": "yarn g:pretty --write './**/*.*' --ignore-path ../../.prettierignore",
    "publicdocs": "typedoc --excludePrivate --excludeProtected --out public-docs",
    "start": "concurrently 'yarn:start:*' -k",
    "start:esm": "yarn g:tsc --pretty --sourceMap --watch",
    "start:esmbundle": "rollup -c --watch --waitForBundleInput",
    "test": "yarn copy:mocks && TZ=America/Los_Angeles jest",
    "test:watch": "yarn copy:mocks && TZ=America/Los_Angeles jest --watch"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@arcgis/charts-spec": "4.31.0-next.104",
    "@esri/arcgis-html-sanitizer": "^2.10.0",
    "ajv": "^6.12.6",
    "fast-memoize": "^2.5.2",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.22.15",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/jest": "^29.5.0",
    "@types/lodash-es": "^4.17.5",
    "babel-jest": "^29.7.0",
    "babel-plugin-rewire-ts": "^1.4.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^2.78.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-sourcemaps": "^0.6.3"
  },
  "types": "dist/types/index.d.ts"
}