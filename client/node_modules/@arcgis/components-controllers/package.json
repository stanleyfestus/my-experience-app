{
  "name": "@arcgis/components-controllers",
  "version": "4.31.0-next.58",
  "description": "Controllers are a code-reuse pattern for Stencil and Lit Web Components. They also improve Developer Experience of writing Web Components",
  "homepage": "https://developers.arcgis.com/javascript/latest/",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/accessor": {
      "types": "./dist/accessor/index.d.ts",
      "import": "./dist/accessor/index.js",
      "require": "./dist/accessor/index.cjs"
    },
    "./accessor": {
      "types": "./dist/accessor/index.d.ts",
      "import": "./dist/accessor/index.js",
      "require": "./dist/accessor/index.cjs"
    },
    "./jest-preset": "./jest-preset.cjs",
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./dist/plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/jestPreprocessor": {
      "types": "./dist/plugins/jestPreprocessor.d.ts",
      "import": "./dist/plugins/jestPreprocessor.js",
      "require": "./dist/plugins/jestPreprocessor.cjs"
    },
    "./dist/stencil-testing": {
      "types": "./dist/stencil-testing/index.d.ts",
      "import": "./dist/stencil-testing/index.js",
      "require": "./dist/stencil-testing/index.cjs"
    },
    "./stencil-testing": {
      "types": "./dist/stencil-testing/index.d.ts",
      "import": "./dist/stencil-testing/index.js",
      "require": "./dist/stencil-testing/index.cjs"
    },
    "./package.json": "./package.json",
    "./*": "./dist/*"
  },
  "files": [
    "dist/",
    "jest-preset.cjs"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "build": "tsup --silent",
    "build:dev": "tsup --silent --sourcemap",
    "watch": "yarn build:dev --watch --onSuccess 'yarn'",
    "test": "concurrently \"yarn test:vitest\" \"yarn test:stencil\"",
    "test:vitest": "vitest run --browser.headless",
    "test:vitest:watch": "vitest --watch",
    "test:vitest:debug": "vitest run --no-file-parallelism --no-isolate --inspect",
    "test:vitest:ci": "vitest related --run --passWithNoTests --browser.headless",
    "coverage": "vitest run --coverage",
    "test:stencil": "yarn node --experimental-vm-modules $(yarn bin stencil) test --spec --",
    "test:stencil:debug": "yarn node --experimental-vm-modules --inspect $(yarn bin stencil) test --spec --no-cache --runInBand --",
    "test:stencil:watch": "stencil test --spec --watchAll",
    "test:stencil:ci": "yarn node --experimental-vm-modules $(yarn bin stencil) test --spec --coverage --ci --passWithNoTests --findRelatedTests --",
    "ci-test": "yarn test:stencil:ci",
    "lint-test": "concurrently --passthrough-arguments \"yarn test:vitest:ci {@}\" \"yarn test:stencil:ci {@}\"",
    "clean": "rimraf ./dist ./turbo ./node_modules"
  },
  "dependencies": {
    "@arcgis/components-utils": "4.31.0-next.58"
  },
  "devDependencies": {
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@arcgis/core-adapter": "4.31.0-next.58",
    "@arcgis/typescript-config": "4.31.0-next.58",
    "@jest/transform": "^29.7.0",
    "@stencil/core": "4.19.2",
    "@testing-library/dom": "^10.4.0",
    "@types/estraverse": "^5.1.7",
    "@types/jest": "^29.5.0",
    "@vitest/browser": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "lit": "^3.1.2",
    "playwright": "^1.46.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.25.0",
    "tsup": "^8.1.0",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@arcgis/core-adapter": ">=4.31.0-next <4.32"
  },
  "peerDependenciesMeta": {
    "@arcgis/core": {
      "optional": true
    },
    "@arcgis/core-adapter": {
      "optional": true
    }
  },
  "gitHead": "b288e370368c4dd72fffe382045684a3e7945b76"
}
