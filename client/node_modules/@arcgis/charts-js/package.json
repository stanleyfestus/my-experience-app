{
  "name": "@arcgis/charts-js",
  "version": "4.31.0-next.104",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "TypeScript library for rendering different chart types",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/commonjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "yarn build:sass && yarn build:esm && yarn build:esmbundle",
    "build:esm": "yarn g:tsc --pretty --sourceMap",
    "build:esmbundle": "rollup -c",
    "build:production": "yarn prebuild && yarn build:sass && tsc --pretty  && rollup -c --environment BUILD_TYPE:production && rimraf dist/tsc",
    "build:sass": "sass --no-source-map ./src/styles:./dist/assets/css",
    "build:storybook": "storybook build -c .storybook -o ./storybook-static --quiet",
    "build:watch": "yarn g:tsc --pretty --sourceMap --watch -p ./tsconfig.dev.json",
    "copy:mocks": "yarn node ./scripts/gather-test-utils.js",
    "dist:copy": "node scripts/copy-dist-demo.js",
    "docs": "typedoc --out docs",
    "gatherdemofiles": "node scripts/gather-demo-dependencies.js",
    "install-peers": "peerdeps",
    "lint": "yarn g:eslint '**/*.*' --ignore-path ../../.eslintignore --fix --cache --config ../../.eslintrc.json",
    "postbuild": "yarn dist:copy",
    "prebuild": "rimraf dist && yarn gatherdemofiles",
    "prebuild:storybook": "rimraf ./storybook-static",
    "precommit": "lint-staged  --config=../../.lintstagedrc.json",
    "predocs": "rimraf docs",
    "prepublicdocs": "rimraf public-docs",
    "prestart": "yarn gatherdemofiles",
    "pretty": "yarn g:pretty --write './**/*.*' --ignore-path ../../.prettierignore",
    "publicdocs": "typedoc --excludePrivate --excludeProtected --out public-docs",
    "start": "yarn g:concurrently 'yarn:start:*' -k",
    "start:storybook": "storybook dev -c .storybook -p 6009 --quiet",
    "test": "yarn copy:mocks && TZ=America/Los_Angeles jest",
    "test:watch": "yarn copy:mocks && TZ=America/Los_Angeles jest --watch"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.31",
    "@arcgis/charts-js-common": "4.31.0-next.104",
    "@arcgis/charts-shared-utils": "4.31.0-next.104",
    "@arcgis/charts-spec": "4.31.0-next.104",
    "chance": "^1.1.11",
    "d3-array": "^3.1.1",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-essentials": "^8.2.8",
    "@storybook/web-components": "^8.2.8",
    "@storybook/web-components-vite": "^8.2.8",
    "@types/d3-array": "^2.9.0",
    "@types/jest": "^29.5.0",
    "@types/lodash-es": "^4.17.5",
    "babel-jest": "^29.7.0",
    "babel-plugin-rewire-ts": "^1.4.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^2.78.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "sass": "^1.30.0",
    "storybook": "^8.2.8",
    "ts-jest": "29.1.1"
  },
  "types": "dist/types/index.d.ts"
}