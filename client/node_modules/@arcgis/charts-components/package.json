{
  "name": "@arcgis/charts-components",
  "version": "4.31.0-next.104",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "Reusable ArcGIS charting Web Components.",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "yarn build:stencil",
    "build:components:dev": "stencil build --dev",
    "build:dev": "yarn pre && yarn build:components:dev",
    "build:production": "cross-env BUILD_TYPE=production yarn build:stencil",
    "build:stencil": "stencil build --docs",
    "build:storybook": "storybook build -c .storybook/internal -o ./storybook-static --quiet",
    "build:storybook:external": "storybook build -c .storybook/external -o ./storybook-static-external --quiet",
    "build:watch": "yarn build:dev --watch",
    "copy:mocks": "yarn node ./scripts/gather-test-utils.js",
    "docs": "typedoc --out docs",
    "generate-type-definitions": "yarn g:tsc--outDir dist/types --declaration --emitDeclarationOnly",
    "install-peers": "peerdeps",
    "lint": "yarn g:eslint '**/*.*' --ignore-path ../../.eslintignore --fix --cache --config ../../.eslintrc.json",
    "pre": "rimraf ./dist ./www",
    "prebuild:storybook": "rimraf ./storybook-static",
    "precommit": "lint-staged  --config=../../.lintstagedrc.json",
    "predocs": "rimraf docs",
    "prepublicdocs": "rimraf public-docs",
    "pretty": "yarn g:pretty --write './**/*.*' --ignore-path ../../.prettierignore",
    "publicdocs": "typedoc --excludePrivate --excludeProtected --out public-docs",
    "start": "yarn g:concurrently 'yarn:start:*' -k",
    "start:external-storybook": "storybook dev -c .storybook/external -p 6017 --quiet",
    "start:internal-storybook": "storybook dev -c .storybook/internal -p 6007 --quiet",
    "test": "yarn copy:mocks && cross-env NODE_ENV='test' stencil test --spec --silent",
    "test:nobuild": "yarn copy:mocks && yarn test --no-build",
    "test:watch": "yarn copy:mocks && cross-env NODE_ENV='test' stencil test --spec --watchAll"
  },
  "files": [
    "dist/"
  ],
  "peerDependencies": {
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@esri/calcite-components": "^2.13.2"
  },
  "dependencies": {
    "@arcgis/charts-js": "4.31.0-next.104",
    "@arcgis/charts-js-next": "4.31.0-next.104",
    "@arcgis/charts-shared-utils": "4.31.0-next.104",
    "@arcgis/charts-spec": "4.31.0-next.104",
    "@stencil/core": "4.20.0"
  },
  "devDependencies": {
    "@arcgis/components-plugins": ">=4.31.0-next <4.32",
    "@arcgis/core": ">=4.31.0-next <4.32",
    "@arcgis/storybook-utils": ">=4.31.0-next <4.32",
    "@stencil/sass": "^3.0.12",
    "@storybook/addon-a11y": "^8.2.8",
    "@types/jest": "^29.5.0",
    "@types/uuid": "^9.0.7",
    "chromatic": "^10.2.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-storybook": "^0.8.0",
    "fastq": "~1.13.0",
    "jest": "^29.5.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "storybook": "^8.2.8",
    "uuid": "^9.0.1",
    "vite": "^5.3.1"
  },
  "resolutions": {
    "@types/react": "^17.0"
  },
  "types": "dist/types/components.d.ts",
  "@comments": {
    "typedoc": {
      "a": "typedoc.json does not allow adding non-standard options like @comment",
      "b": "ignoreCompilerErrors = true to handle just StencilJS based packages which allow unused private methods (for its `own` lifecycle methods, etc.)"
    }
  },
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "unpkg": "dist/charts-components/charts-components.js"
}